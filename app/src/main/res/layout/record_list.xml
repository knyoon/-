<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/list_line"
        android:layout_width="304dp"
        android:layout_height="1.5dp"
        android:background="@color/navy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/drugImage"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/drung_sampleimage"
        app:layout_constraintTop_toBottomOf="@id/list_line"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        app:layout_constraintStart_toEndOf="@id/drugImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
        android:id="@+id/drugName"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕"
        android:textSize="12dp"
        android:textColor="@color/navy"
        android:fontFamily="@font/noto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/drugImage"
        app:layout_constraintTop_toTopOf="@id/hashtagreview" />
        <TextView
            android:id="@+id/hashtagreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_navy"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_medium"
            android:textSize="10dp"
            android:text="   #해쉬태그   "
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>