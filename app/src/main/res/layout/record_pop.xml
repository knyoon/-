<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="264dp"
    android:layout_height="410dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_radius"
    android:backgroundTint="@null"
    android:orientation="vertical"
    tools:context=".CustomDialog_record">

    <TextView
        android:id="@+id/drugName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/noto_bold"
        android:gravity="center_horizontal"
        android:text="덱시부펜연질켑슐(덱시부프로펜)"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="20dp" />

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/drugName">

        <ImageButton
            android:id="@+id/good_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:background="@drawable/resize_good" />

        <ImageButton
            android:id="@+id/bad_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="@drawable/resize_bad" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/term"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="23.89dp"
        android:background="@drawable/popup_radius"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_medium"
            android:gravity="center"
            android:text="복약기간"
            android:textColor="@color/navy"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/to_date"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            android:background="@drawable/popup_radius"
            android:fontFamily="@font/noto_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="default"
            android:textColor="@color/navy"
            android:textSize="11dp" />
        <View
            android:layout_width="14dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:background="@color/navy" />

        <TextView
            android:id="@+id/from_date"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            android:background="@drawable/popup_radius"
            android:fontFamily="@font/noto_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="default"
            android:textColor="@color/navy"
            android:textSize="11dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/record"
        android:gravity="center"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/popup_radius"
        android:fontFamily="@font/noto_medium"
        android:hint="태그를 입력해주세요."
        android:textColor="#445E86"
        android:textSize="12sp"
        android:focusable="true"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/term"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_medium"
        android:text="기록"
        android:layout_marginStart="5dp"
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/record"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/hashtag"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="시험삼아서"
        app:layout_constraintTop_toBottomOf="@id/txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/popup_ok_btn"
        tools:ignore="MissingConstraints" />






    <Button
        android:id="@+id/popup_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/popup_ok_btn"
        android:fontFamily="@font/noto_medium"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>