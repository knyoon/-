<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
        android:id="@+id/mainlogo"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/mainlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wrap"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="91dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainlogo">
        <EditText
            android:id="@+id/login_id"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/popup_radius"
            android:focusable="true"
            android:fontFamily="@font/noto_medium"
            android:gravity="center"
            android:hint="별명을 입력해주세요."
            android:singleLine="true"
            android:textColor="#445E86"
            android:textSize="12sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/noto_medium"
            android:text="별명"
            android:textColor="@color/navy"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/login_id"
            app:layout_constraintTop_toTopOf="@+id/login_id"
            app:layout_constraintStart_toStartOf="@id/login_id"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="1dp"
            />

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/popup_radius"
            android:focusable="true"
            android:fontFamily="@font/noto_medium"
            android:gravity="center"
            android:hint="암호를 입력해주세요."
            android:singleLine="true"
            android:textColor="#445E86"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/login_btn"
            app:layout_constraintTop_toBottomOf="@id/login_id"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/noto_medium"
            android:text="암호"
            android:textColor="@color/navy"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/login_pw"
            app:layout_constraintTop_toTopOf="@+id/login_pw"

            app:layout_constraintStart_toStartOf="@id/login_pw"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="1dp"
            />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/radius_navy"
            android:fontFamily="@font/noto_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@id/join_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_pw" />

        <Button
            android:id="@+id/join_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="71dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="71dp"
            android:background="@color/white"
            android:fontFamily="@font/noto_medium"
            android:text="join"
            android:textColor="@color/navy"
            android:textSize="12dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>